.app__header
    button(
        cdkOverlayOrigin
        '#trigger'='cdkOverlayOrigin'
        '(click)'='isOpen = !isOpen'
    )
        .user-avatar
            span {{ (user$ | async)?.displayName }}
            fa(name='user-circle')


ng-template(
    cdkConnectedOverlay
    '[cdkConnectedOverlayOrigin]'='trigger'
    '[cdkConnectedOverlayOpen]'='isOpen'
)
    .dropdown-menu
        .dropdown-menu__arrow.top.right
        ul.dropdown-menu__list
            li.dropdown-menu__list-item('(click)'='onOpenProfile($event)')
                mat-icon edit
                span View Profile
            li.dropdown-menu__list-item('(click)'='onOpenSettings($event)')
                mat-icon settings
                span Account Settings
            li.dropdown-menu__list-item('(click)'='onLogout($event)')
                mat-icon exit_to_app
                span Sign Out
